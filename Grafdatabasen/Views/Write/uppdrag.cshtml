                        @Html.EditorFor(m => m.Startdatum, new { htmlAttributes = new { @class = "form-control date", @placeholder = "Startdatum:" } })
                    </div>
                    @Html.LabelFor(m => m.Slutdatum, new { @class = "control-label col-md-1" })
